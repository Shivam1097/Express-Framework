<% include partials/header%>


<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog</div>
    <form class="ui form" method="POST" action="/blogs/<%= blog._id%>?_method=PUT">
        <div class="field">
            <lable>Title:</lable>
        <input type="text" name="blog[title]" value="<%= blog.title %>" required>
        </div>
        <div class="field">
            <lable>Image URL:</lable>
            <input type="text" name="blog[image]" value="<%= blog.image%>">
        </div>
        <div class="field">
            <lable>Blog Content:</lable>
            <textarea type="text" name="blog[body]" required><%= blog.body %></textarea>   <!-- Textarea doesn't have a value attribute.-->
        </div>
        <div class="field">
            <button class="ui big button" type="submit">Update</button>
       
        </div>
    </form>
</div>
<% include partials/header%>